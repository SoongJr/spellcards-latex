{
    "name": "LaTeX Project",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "..",
        "target": "devcontainer"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "James-Yu.latex-workshop",
                "timonwong.shellcheck"
            ]
        }
    },
    "postCreateCommand": "miktex --admin packages update-package-database && miktex --admin packages update"
}